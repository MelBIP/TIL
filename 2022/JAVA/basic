// 표준 입출력

package basic;

import java.util.Scanner;

public class 표입출_과제1 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.print("이름을 입력하시오 : ");
	String name = in.next();

	System.out.println("당신의 이름은 " + name + "입니다.");
	in.close(); // 메모리 관리
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_과제2 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.print("두 개의 정수를 입력하시오 : ");
	int a = in.nextInt();
	int b = in.nextInt();

	System.out.printf("입력한 두 수의 합은 %d입니다.", a + b);
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_과제3 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.println("두 개의 실수를 입력하시오 : ");
	float a = in.nextFloat();
	float b = in.nextFloat();

	System.out.printf("입력한 두 수의 합은 %f입니다.", a + b);
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_과제4 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.print("삼각형의 밑변의 길이와 높이를 입력하시오 : ");
	float width = in.nextInt();
	float height = in.nextInt();

	System.out.printf("삼각형의 넓이는 %f입니다.", width * height / (float)2);
}

```

}

// try - catch문

package basic;

import java.util.Scanner;

public class 표입출_연습문제1 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.println("첫 번째 수를 입력하세요. ");
	int first = in.nextInt();

	System.out.println("두 번째 수를 입려가세요. ");
	int second = in.nextInt();

	System.out.println("두 수의 합은 : " + (first + second));
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_연습문제2 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.println("두 수를 입력하세요 ");
	int a = in.nextInt();
	int b = in.nextInt();

	System.out.println("두 수의 곱은 " + (a * b) + "입니다.");
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_연습문제3 {
public static void main(String[] args) {
Scanner in = new Scanner ([System.in](http://system.in/));

```
	System.out.print("이름을 입력하세요 : ");
	String name = in.next();

	System.out.print("나이를 입력하세요 : ");
	int age = in.nextInt();

	System.out.printf("이름은 %s이고 나이는 %d살입니다.", name, age);
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_연습문제4 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.println("반지름을 입력하세요 : ");
	double radius = in.nextFloat();

	System.out.println("원의 넓이는 " + (radius * radius * 3.14) + "입니다.");
}

```

}

package basic;

import java.util.Scanner;

public class 표입출_연습문제8 {
public static void main(String[] args) {
Scanner in = new Scanner([System.in](http://system.in/));

```
	System.out.print("화씨온도를 입력하시오 : ");
	float F = in.nextFloat();

	float C = (F - 32) * 5 / 9;

	System.out.println("섭씨 온도는" + C + "입니다.");
}

```

}
